<?xml version="1.0" encoding="UTF-8"?>
<data xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com http://www.woltlab.com/XSD/templatelistener.xsd">
	<import>
		<templatelistener name="javascriptInclude">
			<environment>user</environment>
			<templatename>headInclude</templatename>
			<eventname>javascriptInclude</eventname>
			<templatecode><![CDATA[{if MODULE_LIKE}<script type="text/javascript" src="{@$__wcf->getPath('wcf')}js/WCF.Like.js"></script>{/if}]]></templatecode>
		</templatelistener>
		
		<templatelistener name="javascriptLanguageImport">
			<environment>user</environment>
			<templatename>headInclude</templatename>
			<eventname>javascriptLanguageImport</eventname>
			<templatecode><![CDATA[{if MODULE_LIKE},'wcf.like.button.like': '{lang}wcf.like.button.like{/lang}','wcf.like.button.dislike': '{lang}wcf.like.button.dislike{/lang}','wcf.like.tooltip': '{lang}wcf.like.jsTooltip{/lang}','wcf.like.summary': '{lang}wcf.like.summary{/lang}'{/if}]]></templatecode>
		</templatelistener>
		
		<templatelistener name="javascriptIconImport">
			<environment>user</environment>
			<templatename>headInclude</templatename>
			<eventname>javascriptIconImport</eventname>
			<templatecode><![CDATA[{if MODULE_LIKE},'wcf.icon.like': '{icon}thumbsUp{/icon}','wcf.icon.dislike': '{icon}thumbsDown{/icon}','wcf.icon.like.active': '{icon}thumbsUpGreen{/icon}','wcf.icon.dislike.active': '{icon}thumbsDownRed{/icon}'{/if}]]></templatecode>
		</templatelistener>
		
		<templatelistener name="userInformationStatistics">
			<environment>user</environment>
			<templatename>userInformation</templatename>
			<eventname>statistics</eventname>
			<templatecode><![CDATA[{if MODULE_LIKE}<dt>{lang}wcf.like.likesReceived{/lang}</dt>
<dd>{#$user->likesReceived}</dd>{/if}]]></templatecode>
		</templatelistener>
		
		<templatelistener name="userStatistics">
			<environment>user</environment>
			<templatename>user</templatename>
			<eventname>statistics</eventname>
			<templatecode><![CDATA[{if MODULE_LIKE}<dt>{lang}wcf.like.likesReceived{/lang}</dt>
<dd>{#$user->likesReceived}</dd>{/if}]]></templatecode>
		</templatelistener>
		
		<templatelistener name="membersList">
			<environment>user</environment>
			<templatename>membersList</templatename>
			<eventname>sortField</eventname>
			<templatecode><![CDATA[<option value="likesReceived"{if $sortField == 'likesReceived'} selected="selected"{/if}>{lang}wcf.like.likesReceived{/lang}</option>]]></templatecode>
		</templatelistener>
	</import>
</data>